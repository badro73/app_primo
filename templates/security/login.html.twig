{% extends 'base.html.twig' %}


{% block body %}
    <link rel="stylesheet" href="https://getbootstrap.com/docs/4.3/examples/sign-in/signin.css">
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="form-signin" action="{{ path('login') }}" method="post">
    <img class="mb-4-" src="https://coprime.fr/content/themes/coprime/library/images/coprime__logo.png" alt="" width="200" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label  for="username">Username:</label>
    <input  type="text" id="username"  class="form-control" name="_username" value="{{ last_username }}" required/>
    <label  for="password">Password:</label>
    <input type="password" class="form-control" id="password" name="_password" required/>
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account"/>
    #}
    <button class="btn btn-lg btn-primary btn-block" type="submit">login</button>
    <p class="mt-5 mb-3 text-muted">© 2019 CoPrime - Tous droits réservés</p>
</form>

{% endblock %}